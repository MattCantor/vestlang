{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.peggy"],
      "plugins": [
        "prettier-plugin-pegjs"
      ]
    },
    {
      "files": ["**/*.vest"],
      "plugins": [
        "@vestlang/prettier-plugin-vestlang"
      ],
      "options": {
        "parser": "vestlang-parser"
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.jsonc"],
      "options": {
        "parser": "json"
      }
    }
  ]
}
