{
  "name": "@vestlang/core",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
    "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist src/generated/parser.js",
    "build:parser": "peggy --format es -o src/generated/parser.js grammar/vesting.pegjs",
    "build": "npm run clean && npm run build:parser && tsc -p tsconfig.json",
    "dev": "tsc -p . --watch",
    "test": "npm run build && vitest"
  },
  "devDependencies": {
    "peggy": "^5.0.5",
    "typescript": "^5.8.3"
  }
}
